<h1>Name and address!</h1>
<form method="POST">
    <input type="text" name="name" value="<%= name %>" />
    <input type="text" name="address" value="<%= address %>" />
    <input type="submit" value="Submit!" />
</form>
<% if (errors && errors.length > 0) { %>
<ul>
    <% errors.forEach((error) => { %>
        <li><%= error %></li>
    <% }); %>
</ul>
<% } %>
